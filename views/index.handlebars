<div class="container">

    {{!-- HEADER --}}
    <header class="row m-4">
        <div class="col-md-12 text-center">
            <img src="/assets/img/burger.png" alt="burger" style="height: 100px;" />
            <h1> Eat-Da-Burger! </h1>
        </div>
    </header>

    {{!-- input field ============== do I need to change anything to FORM? // add btn action:url and method:POST ????? --}}
    <div class="row m-4">
        <div class="col-md-6 input-group mb-3" style="margin: auto;">
            <input type="text" class="form-control beige devoured" placeholder="Enter a burger you would like to eat"
                value="">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary brown-button" type="submit" id="add-btn">Submit</button>
            </div>
        </div>
    </div>

    {{!-- MAIN --}}
    <main class="row">

        {{!-- to be devoured --}}
        <div class="col-md-6">
            <h2>Burgers</h2>
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    {{#each burgersObj}}
                        {{#unless devoured}}
                            {{> availBurgers}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        {{!-- devoured --}}
        <div class="col-md-6">
            <h2>Sorry, all gone!</h2>
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    {{#each burgersObj}}
                        {{#if devoured}}
                            {{> devouredBurgers}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>

    </main>

</div>